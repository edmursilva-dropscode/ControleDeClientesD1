@model Cliente
@{
    ViewData["Title"] = "Editar cliente";
}

<div class="text-center">

    <h1 class="display-4">Editar cliente</h1>

</div>

<form asp-controller="Cliente" asp-action="Alterar" method="post">

    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="nome">Nome</label>
            <input type="text" asp-for="Nome" class="form-control" placeholder="Nome" required>
        </div>
        <div class="form-group col-md-6">
            <label for="data">Data de Nascimento</label>
            <input type="date" asp-for="Dtnascimento" class="form-control" required>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="telefone" class="control-label">Telefone</label>
            <input type="text" asp-for="Telefone" class="form-control" placeholder="Telefone" required>
            <div class="help-block with-errors"></div>
        </div>
        <div class="form-group col-md-6">
            <label for="celular" class="control-label">Celular</label>
            <input type="text" asp-for="Celular" class="form-control" placeholder="Celular" required>
            <div class="help-block with-errors"></div>
        </div>
    </div>

    <div class="form-group">
        <label for="endereco">Endereço 1</label>
        <input type="text" asp-for="Endereco" class="form-control" placeholder="Rua 13 de Maio 1234 Pirassununga/SP - Brasil" required>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="cidade">Cidade</label>
            <input type="text" asp-for="Cidade" class="form-control" placeholder="Cidade" required>
        </div>
        <div class="form-group col-md-4">
            <label for="estafo">Estado</label>
            <select asp-for="Estado" class="form-control" required>
                <option selected>Selecionar</option>
                <option>AC</option>
                <option>AL</option>
                <option>AP</option>
                <option>AM</option>
                <option>BA</option>
                <option>CE</option>
                <option>DF</option>
                <option>ES</option>
                <option>GO</option>
                <option>MA</option>
                <option>MT</option>
                <option>MS</option>
                <option>MG</option>
                <option>PA</option>
                <option>PB</option>
                <option>PR</option>
                <option>PE</option>
                <option>PI</option>
                <option>RJ</option>
                <option>RN</option>
                <option>RS</option>
                <option>RO</option>
                <option>RR</option>
                <option>SC</option>
                <option>SP</option>
                <option>SE</option>
                <option>TO</option>
            </select>
        </div>
        <div class="form-group col-md-2">
            <label for="cep">CEP</label>
            <input type="text" asp-for="Cep" class="form-control" placeholder="CEP" required>
        </div>
    </div>

    <br />

    <div class="form-group">
        <label for="inputNetwork">Rede Sociais</label>
        <div class="row">
            <div class="col">
                <input type="text" asp-for="Facebook" class="form-control" placeholder="Facebook">
            </div>
            <div class="col">
                <input type="text" asp-for="Linkedin" class="form-control" placeholder="Linkedin">
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col">
                <input type="text" asp-for="Twitter" class="form-control" placeholder="Twitter">
            </div>
            <div class="col">
                <input type="text" asp-for="Instagran" class="form-control" placeholder="Instagran">
            </div>
        </div>
    </div>

    <br />

    <input type="hidden" asp-for="Id" />    <!--campo oculto para servir de referencia/identificador-->

    <button type="submit" class="btn btn-primary">Alterar</button>
    <a class="btn btn-secondary" asp-controller="Cliente" asp-action="Index" role="button">Voltar</a>

    <br />

</form>
